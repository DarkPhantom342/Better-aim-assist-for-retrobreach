    guiVisible = not guiVisible
    v15.Visible = guiVisible -- <--- THIS IS THE CRUCIAL LINE I MISSED BEFORE
    -- Change dot color to reflect state (green when GUI is visible, red when hidden)
    toggleButton.BackgroundColor3 = guiVisible and Color3.fromRGB(0, 255, 0) or Color3.fromRGB(255, 0, 0)
